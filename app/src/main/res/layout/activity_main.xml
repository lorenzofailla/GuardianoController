<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/TXV___MAINACTIVITY___ONLINEDEVICESLBL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/MainActivity_onlineDevices"></TextView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/RVW___MAINACTIVITY___ONLINEDEVICES"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PBR___MAINACTIVITY___PROGRESSBAR"></ProgressBar>


    </LinearLayout>